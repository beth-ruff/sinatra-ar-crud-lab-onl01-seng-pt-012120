<form action="/articles/<%= @article.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Title: <input type="text" id="title" name="title" value="<%=@article.title%>"></p>
  <br/>
  <p>Content: <input type="text" id="content" name="content" value="<%=@article.content%>"></p>
  <input type="submit" value="submit" id="submit">
</form>